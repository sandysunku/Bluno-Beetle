<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlunoBeetleLEDDemo.MainPage">

    <StackLayout Margin="40">
        <Frame BackgroundColor="#2196F3" Padding="10" CornerRadius="0">
            <Label Text="Welcome to Bluno Beetle Demo!" HorizontalTextAlignment="Center" TextColor="White" FontSize="30"/>
        </Frame>
        <Label Text="Start Scanning now" FontSize="Subtitle" Padding="30,10,30,10" HorizontalOptions="Center" x:Name="StatusLabel"/>
       <Button WidthRequest="250" HorizontalOptions="Center" HeightRequest="60" Text="Scan" Clicked="ScanClicked"/>
        <Button WidthRequest="250" HorizontalOptions="Center" HeightRequest="60" Text="Conect" Margin="0,10,0,0" Clicked="ConnectClicked"/>
        <Button WidthRequest="250" HorizontalOptions="Center" HeightRequest="60" Text="Toggle" Margin="0,10,0,0" Clicked="ToggleClicked"/>
    </StackLayout>

</ContentPage>
